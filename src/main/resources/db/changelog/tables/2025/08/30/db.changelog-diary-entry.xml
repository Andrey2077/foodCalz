<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="
        http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.3.xsd">

    <changeSet id="create-diary-entries-table" author="Andrey2077">
        <createTable tableName="diary_entries">
            <column name="id" type="BIGINT">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="user_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="food_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="date" type="TIMESTAMP"/>
            <column name="meal_type" type="INT"/>
            <column name="grams" type="INT"/>
        </createTable>

        <addForeignKeyConstraint
                baseTableName="diary_entries"
                baseColumnNames="user_id"
                referencedTableName="users"
                referencedColumnNames="id"
                constraintName="foreignKey_diary_user"/>

        <addForeignKeyConstraint
                baseTableName="diary_entries"
                baseColumnNames="food_id"
                referencedTableName="food"
                referencedColumnNames="id"
                constraintName="foreignKey_diary_food"/>
    </changeSet>

</databaseChangeLog>